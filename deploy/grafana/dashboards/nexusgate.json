{
  "annotations": { "list": [] },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "id": null,
  "links": [],
  "panels": [
    {
      "title": "Devices Total",
      "type": "stat",
      "gridPos": { "h": 4, "w": 4, "x": 0, "y": 0 },
      "targets": [
        { "expr": "nexusgate_devices_total", "refId": "A" }
      ],
      "fieldConfig": {
        "defaults": { "color": { "mode": "thresholds" }, "thresholds": { "steps": [{ "color": "blue", "value": null }] } }
      }
    },
    {
      "title": "Devices Online",
      "type": "stat",
      "gridPos": { "h": 4, "w": 4, "x": 4, "y": 0 },
      "targets": [
        { "expr": "nexusgate_devices_online", "refId": "A" }
      ],
      "fieldConfig": {
        "defaults": { "color": { "mode": "thresholds" }, "thresholds": { "steps": [{ "color": "green", "value": null }] } }
      }
    },
    {
      "title": "Devices Offline",
      "type": "stat",
      "gridPos": { "h": 4, "w": 4, "x": 8, "y": 0 },
      "targets": [
        { "expr": "nexusgate_devices_offline", "refId": "A" }
      ],
      "fieldConfig": {
        "defaults": { "color": { "mode": "thresholds" }, "thresholds": { "steps": [{ "color": "red", "value": null }] } }
      }
    },
    {
      "title": "Unresolved Alerts",
      "type": "stat",
      "gridPos": { "h": 4, "w": 4, "x": 12, "y": 0 },
      "targets": [
        { "expr": "nexusgate_alerts_unresolved", "refId": "A" }
      ],
      "fieldConfig": {
        "defaults": { "color": { "mode": "thresholds" }, "thresholds": { "steps": [{ "color": "green", "value": null }, { "color": "orange", "value": 1 }, { "color": "red", "value": 5 }] } }
      }
    },
    {
      "title": "Critical Alerts",
      "type": "stat",
      "gridPos": { "h": 4, "w": 4, "x": 16, "y": 0 },
      "targets": [
        { "expr": "nexusgate_alerts_critical", "refId": "A" }
      ],
      "fieldConfig": {
        "defaults": { "color": { "mode": "thresholds" }, "thresholds": { "steps": [{ "color": "green", "value": null }, { "color": "red", "value": 1 }] } }
      }
    },
    {
      "title": "WebSocket Clients",
      "type": "stat",
      "gridPos": { "h": 4, "w": 4, "x": 20, "y": 0 },
      "targets": [
        { "expr": "nexusgate_websocket_clients", "refId": "A" }
      ],
      "fieldConfig": {
        "defaults": { "color": { "mode": "thresholds" }, "thresholds": { "steps": [{ "color": "purple", "value": null }] } }
      }
    },
    {
      "title": "Device Online Ratio",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 4 },
      "targets": [
        { "expr": "nexusgate_devices_online", "legendFormat": "Online", "refId": "A" },
        { "expr": "nexusgate_devices_offline", "legendFormat": "Offline", "refId": "B" },
        { "expr": "nexusgate_devices_total", "legendFormat": "Total", "refId": "C" }
      ],
      "fieldConfig": {
        "defaults": { "custom": { "drawStyle": "line", "fillOpacity": 10, "pointSize": 5 } },
        "overrides": [
          { "matcher": { "id": "byName", "options": "Online" }, "properties": [{ "id": "color", "value": { "fixedColor": "green", "mode": "fixed" } }] },
          { "matcher": { "id": "byName", "options": "Offline" }, "properties": [{ "id": "color", "value": { "fixedColor": "red", "mode": "fixed" } }] },
          { "matcher": { "id": "byName", "options": "Total" }, "properties": [{ "id": "color", "value": { "fixedColor": "blue", "mode": "fixed" } }] }
        ]
      }
    },
    {
      "title": "Alert Trends",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 4 },
      "targets": [
        { "expr": "nexusgate_alerts_unresolved", "legendFormat": "Unresolved", "refId": "A" },
        { "expr": "nexusgate_alerts_warning", "legendFormat": "Warning", "refId": "B" },
        { "expr": "nexusgate_alerts_critical", "legendFormat": "Critical", "refId": "C" }
      ],
      "fieldConfig": {
        "defaults": { "custom": { "drawStyle": "line", "fillOpacity": 10 } },
        "overrides": [
          { "matcher": { "id": "byName", "options": "Warning" }, "properties": [{ "id": "color", "value": { "fixedColor": "orange", "mode": "fixed" } }] },
          { "matcher": { "id": "byName", "options": "Critical" }, "properties": [{ "id": "color", "value": { "fixedColor": "red", "mode": "fixed" } }] }
        ]
      }
    },
    {
      "title": "Go Runtime - Goroutines",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 12 },
      "targets": [
        { "expr": "go_goroutines", "legendFormat": "Goroutines", "refId": "A" }
      ]
    },
    {
      "title": "Go Runtime - Memory (MB)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 12 },
      "targets": [
        { "expr": "go_memstats_alloc_bytes / 1048576", "legendFormat": "Alloc", "refId": "A" },
        { "expr": "go_memstats_sys_bytes / 1048576", "legendFormat": "Sys", "refId": "B" }
      ]
    },
    {
      "title": "Process CPU Seconds (rate)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 12 },
      "targets": [
        { "expr": "rate(process_cpu_seconds_total[5m])", "legendFormat": "CPU rate", "refId": "A" }
      ]
    }
  ],
  "schemaVersion": 39,
  "tags": ["nexusgate"],
  "templating": { "list": [] },
  "time": { "from": "now-1h", "to": "now" },
